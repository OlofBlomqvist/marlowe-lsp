{
  "name": "Marlowe",
  "scopeName": "source.marlowe",
  "patterns": [
    {
      "name": "keyword.control",
      "match": "\\b(Close|Pay|If|When|Let|Assert|Deposit|Choice|Notify)\\b"
    },
    {
      "name": "constant.numeric",
      "match": "\\b\\d+\\b"
    },
    {
      "name": "string.quoted",
      "match": "\"[^\"]*\""
    },
    {
      "name": "constant.language",
      "match": "\\b(TrueObs|FalseObs|Address|Role|Account|Party|ChoiceId|ValueId|Bound|Timeout|Token)\\b"
    },
    {
      "name": "keyword.operator",
      "match": "\\b(AndObs|OrObs|NotObs|ChoseSomething|ValueGE|ValueGT|ValueLT|ValueLE|ValueEQ|AvailableMoney|Constant|NegValue|AddValue|SubValue|MulValue|DivValue|ChoiceValue|TimeIntervalStart|TimeIntervalEnd|UseValue|Cond)\\b"
    }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.line",
          "match": "--.*"
        }
      ]
    }
  },
  "injections": {
    "L:comment": {
      "patterns": [
        {
          "include": "#comment"
        }
      ]
    }
  }
}
